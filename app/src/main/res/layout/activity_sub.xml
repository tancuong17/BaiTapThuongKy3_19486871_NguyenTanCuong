<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagePhoneSub"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/iphone12den"/>
        <TextView
            android:id="@+id/infoPhoneSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điện thoại IPHONE 12\nHàng chính hãng"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical"
        android:background="#909090"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Chọn một màu bên dưới:"/>
        <TextView
            android:id="@+id/blackColor"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="@color/black"
            android:layout_marginVertical="5sp"/>
        <TextView
            android:id="@+id/whiteColor"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="@color/white"
            android:layout_marginVertical="5sp"/>
        <TextView
            android:id="@+id/redColor"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="#FF0000"
            android:layout_marginVertical="5sp"/>
        <TextView
            android:id="@+id/blueColor"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="#191970"
            android:layout_marginVertical="5sp"/>
        <Button
            android:id="@+id/chooseColorSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XONG"/>
    </LinearLayout>
</LinearLayout>